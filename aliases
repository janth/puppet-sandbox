alias c=clear
alias a=alias

alias sa="ssh-agent > $HOME/.ssh-agent ; source $HOME/.ssh-agent ; ssh-add"
alias s=ssh

#alias T='tree -A -U -L 2'
alias T='tree -A --dirsfirst -L 2'

# This only works with zsh
#echo "Shell: $SHELL, ZSH_NAME: $ZSH_NAME"
[[ $SHELL == '/bin/zsh' ]] && alias av='alias -m -L "v*" av e m'
[[ $ZSH_NAME == 'zsh' ]] && alias av='alias -m -L "v*" av e m'

alias v=vagrant
alias vb='vagrant box'
alias vd='vagrant destroy -f'
alias vp='vagrant provision'
alias vs='vagrant ssh'
alias vS='vagrant status'
alias vh='vagrant halt'
alias vr='vagrant reload'
alias vl='vagrant reload'
alias vu='vagrant up'

alias e='grep -E "^(Error|Warning|Info): " log'
alias m='(rm log ; vd puppet ; sync ; vu puppet ; echo -e "\n\nInfo: JTM: Now doing vagrant provision puppet (second run)...\n\n" ; vp puppet ) 2>&1 | tee log'
